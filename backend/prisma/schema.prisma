datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = []
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  firstname String?
  lastname  String?
  posts     Post[]
  role      Role
}


model MeetingRooms {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  name              String
  postalCode        String
  address           String
  timezone          String
  country           String
  images            String
  pricingMethodId   String
  accupantCapacity  String
  locationId        String
  location          Locations   @relation(fields: [locationId], references: [id])
}

model BookingRooms {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  roomId            String
  attendance        Int
  request           String
  startTime         DateTime
  endTime           DateTime
  totalAmount       Float
  breakDown         String
  userId            String
  meetingRooms      MeetingRooms   @relation(fields: [roomId], references: [id])
}

model Locations {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  name              String
  area              String
  postalCode        String
  address           String
  country           String
  timezone          String
  meetingRooms      MeetingRooms[]
}

model ContactInformation {
  id                String @id @default(cuid))
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  company           String
  name              String
  email             String
  mobile            String
}

model PurchaseOrder {
  id                String @id @default(cuid))
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  contactId         String 
  bookingRoomId     String

}

enum Role {
  ADMIN
  USER
}
